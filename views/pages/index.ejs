<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="card card-styles">
    <div class="card-header">
      <h2>Postal Calculator</h2>
    </div>
    <div class="card-body">
      <form action="/calculator">
        <div class="form-group">
          <label for="weight">Weight of package:</label>
          <input type="text" class="form-control" id="weight" name="weight">
        </div>
        <div class="form-group">
          <label for="shippingType">Type of Shipping:</label>
          <select name="shippingType" id="shippingType" class="form-control">
            <option value="letter-stamp">Stamped Letter</option>
            <option value="letter-metered">Metered Letter</option>
            <option value="envelope">Large Envelope</option>
            <option value="package">First-Class Package</option>
          </select>
        </div>
        <div class="text-center">
          <input type="submit" class="btn btn-primary" value="Calculate">
        </div>
      </form>
    </div>
  </div>

  <% include ../partials/footer.ejs %>

</body>

</html>